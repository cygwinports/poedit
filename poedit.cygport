WX_VERSION=2.8
inherit wxwidgets

NAME="poedit"
VERSION=1.4.6.1
RELEASE=2
CATEGORY="Devel"
SUMMARY="GUI gettext catalogs editor"
DESCRIPTION="poEdit is cross-platform gettext catalogs (.po files) editor.
It aims to provide more convenient approach to editing catalogs than launching
vi and editing the file by hand."
HOMEPAGE="http://www.poedit.net/"
SRC_URI="mirror://sourceforge/poedit/poedit-${VERSION}.tar.gz"

CYGCONF_ARGS="--with-wx-config=${WX_CONFIG}"
